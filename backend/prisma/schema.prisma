generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Text {
  id        String   @id @default(uuid())
  content   String
  sender    String
  createdAt DateTime @default(now())
}

model Image {
  id        String   @id @default(uuid())
  link      String
  createdAt DateTime @default(now())
}

model ImageRequest {
  id        String   @id @default(uuid())
  content   String
  createdAt DateTime @default(now())
}
